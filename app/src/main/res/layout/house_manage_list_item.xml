<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_house_manage_photo"
        android:layout_width="@dimen/x_px_100"
        android:layout_height="@dimen/y_px_100"
        android:layout_margin="10dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#a9a9a9"
        android:scaleType="centerCrop"
        android:textColor="@color/white"
        android:text="待审核"
        android:gravity="center"
        />

    <FrameLayout
        android:layout_width="@dimen/y_px_550"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_house_manage_project_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="长房国际大厦 一期"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_house_manage_full_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/text_tips"
                    android:text="*栋-*单元-****"/>
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>


    <TextView
        android:id="@+id/tv_house_manage"
        android:layout_width="@dimen/x_px_50"
        android:layout_height="@dimen/x_px_50"
        android:gravity="center"
        android:textColor="@color/text_tips"
        android:textSize="20sp"
        android:text=">"
        />


</LinearLayout>
