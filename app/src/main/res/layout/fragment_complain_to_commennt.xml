<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <include layout="@layout/owner_detail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_complain_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_complain_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/blue_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_complain_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_complain_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <GridView
                android:id="@+id/gv_complain_image"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="3dp"
                android:numColumns="3"
                android:padding="10dp"
                android:scrollbars="none"
                android:verticalSpacing="5dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="现场情况"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_complain_screen_des"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_complain_screen_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <GridView
                android:id="@+id/gv_complain_screen_image"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="3dp"
                android:numColumns="3"
                android:padding="10dp"
                android:scrollbars="none"
                android:verticalSpacing="5dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="解决方案："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_complain_programe_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/tv_complain_programe_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/tv_complain_dispose_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="处理结果："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_complain_dispose_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/tv_complain_dispose_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="10dp" />

            <GridView
                android:id="@+id/gv_complain_dispose_images"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="3dp"
                android:numColumns="3"
                android:padding="10dp"
                android:scrollbars="none"
                android:verticalSpacing="5dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_complain_to_comment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/baoxiu_btn_tijiao_p"
                android:gravity="center"
                android:text="评价"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>