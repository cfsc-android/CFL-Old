<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/body_background"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_warn_shape"
        android:layout_margin="20dp"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/other_room_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长房时代城"
                android:textColor="@color/text_white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/other_room_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="8栋-三单元-1003"
                android:textColor="@color/text_white"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/view_line"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房屋编码 :"
                android:textColor="@color/text_white"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/other_room_room_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="123123"
                android:textColor="@color/text_white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/other_room_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/other_room_user_avatar"
            android:layout_width="@dimen/x_px_100"
            android:layout_height="@dimen/y_px_100"
            android:src="@drawable/icon_user_default"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/other_room_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18073667958"
                android:textSize="14sp"
                android:textColor="@color/text_primary"/>
            <TextView
                android:id="@+id/other_room_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="业主"
                android:textSize="14sp"
                android:textColor="@color/text_primary"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/x_px_20"
        android:background="@color/body_background"
        android:textColor="@color/text_desc"
        android:text="房间其他住户"
        android:textSize="14sp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/other_room_rv_other"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/other_room_btn_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_green_shape"
        android:text="切换到此房屋"
        android:textColor="@color/white"/>

</LinearLayout>
