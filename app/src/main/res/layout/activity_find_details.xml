<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.FindDetailsActivity">

    <include layout="@layout/title_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_60"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x_px_30"
        android:paddingRight="@dimen/x_px_30">

        <TextView
            android:id="@+id/tv_find_details_nick_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="来源：知己（业主）"
            android:textColor="@color/find_text_color"
            android:textSize="@dimen/x_px_30" />

        <TextView
            android:id="@+id/tv_find_details_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2018-09-10 10:22"
            android:textColor="@color/no_check_color"
            android:textSize="@dimen/x_px_30" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_pic_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


            <TextView
                android:id="@+id/tv_find_details_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y_px_30"
                android:paddingLeft="@dimen/x_px_30"
                android:paddingRight="@dimen/x_px_30"
                android:paddingTop="@dimen/y_px_30"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/x_px_26" />


        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_1"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_80"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_find_details_zan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_find_details_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_find_like_nor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x_px_20"
                    android:gravity="center_vertical"
                    android:text="点赞"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/x_px_28" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_find_details_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/follow_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_find_details_follow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/btn_home_add"
                android:drawablePadding="@dimen/x_px_20"
                android:gravity="center_vertical"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="@dimen/x_px_28" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>