<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_backgroud"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_manege_house"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="管理所有房屋"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:gravity="center"
        android:background="#dcdcdc"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_house_this"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="当前房屋"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_house_this_photo"
            android:layout_width="@dimen/x_px_100"
            android:layout_height="@dimen/y_px_100"
            android:layout_margin="10dp"
            android:background="#a9a9a9"
            android:scaleType="centerCrop"
            android:textColor="@color/white"
            android:text="待审核"
            android:gravity="center"
            />

        <FrameLayout
            android:layout_width="@dimen/y_px_550"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_house_this_project_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="长房国际大厦 一期"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_house_this_full_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/text_tips"
                        android:text="*栋-*单元-****"/>
                </LinearLayout>

            </LinearLayout>


        </FrameLayout>


        <TextView
            android:id="@+id/tv_house_num"
            android:layout_width="@dimen/x_px_50"
            android:layout_height="@dimen/x_px_50"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:text="0人"
            android:textColor="@color/text_tips"
            android:textSize="15dp" />
    </LinearLayout>




















    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:gravity="center"
        android:background="#dcdcdc"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_house_others"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="其他房屋"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/lv_house_manage_list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/tv_house_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="+" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="添加房屋" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
