    </LinearLayout>

    <Button
        android:id="@+id/btn_setmine_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_round_blue"
        android:text="确认"
        android:textColor="@color/white" />


</LinearLayout>