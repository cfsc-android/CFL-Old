<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_dialog_third_bind_qq"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/umeng_socialize_qq"/>
        <TextView
            android:id="@+id/tv_dialog_third_bind_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"/>
        <TextView
            android:id="@+id/tv_dialog_third_bind_qq_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/main_menu_text_color_true"
            android:text="取消绑定"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_dialog_third_bind_wx"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/umeng_socialize_wechat"/>
        <TextView
            android:id="@+id/tv_dialog_third_bind_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"/>
        <TextView
            android:id="@+id/tv_dialog_third_bind_wx_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/main_menu_text_color_true"
            android:text="取消绑定"/>
    </LinearLayout>

</LinearLayout>
