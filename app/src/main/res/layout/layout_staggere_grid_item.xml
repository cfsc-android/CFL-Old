<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x_px_15"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_find_1" />

    <TextView
        android:id="@+id/tv_theme_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingBottom="@dimen/y_px_20"
        android:paddingLeft="@dimen/x_px_15"
        android:paddingRight="@dimen/x_px_15"
        android:paddingTop="@dimen/y_px_20"
        android:textColor="@color/find_text_color"
        android:textSize="@dimen/x_px_22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y_px_15"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/y_px_18"
        android:paddingLeft="@dimen/x_px_15"
        android:paddingRight="@dimen/x_px_15">

        <ImageView
            android:id="@+id/iv_owner_face"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/iocn_find_user" />

        <TextView
            android:id="@+id/tv_theme_nick_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/y_px_40"
            android:layout_marginLeft="@dimen/x_px_15"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="用户昵称"
            android:textColor="@color/find_text_color"
            android:textSize="@dimen/x_px_22" />

        <ImageView
            android:id="@+id/iv_theme_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x_px_16"
            android:src="@drawable/btn_find_like_nor" />

        <TextView
            android:id="@+id/tv_theme_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y_px_40"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/find_text_color"
            android:textSize="@dimen/x_px_22"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>