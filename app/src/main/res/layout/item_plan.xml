<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="35dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_plan_left_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="2017-02-15 15:30:42"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plan_left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_plan_left_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:text="已核实"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/plan_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_plan_left_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:text="已核实"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/plan_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_plan_right_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="2017-02-15 15:30:42"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_plan_right_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/tsxq_dhk_right"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="未受理"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <!--  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y_px_46"
            android:paddingLeft="@dimen/x_px_30"
            android:paddingRight="@dimen/x_px_26"
            android:paddingTop="@dimen/y_px_46">

            <TextView
                android:id="@+id/tv_plan_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2019-1-7"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/x_px_28" />

            <TextView
                android:id="@+id/tv_plan_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="12:04:22"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/x_px_22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/x_px_2"
                android:layout_height="@dimen/y_px_50"
                android:layout_gravity="center_horizontal"
                android:background="#eeeeee" />

            <ImageView
                android:id="@+id/iv_plan_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_public_end" />

            <View
                android:layout_width="@dimen/x_px_2"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#eeeeee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x_px_30"
            android:paddingRight="@dimen/x_px_30"
            android:paddingTop="@dimen/y_px_52">

            <TextView
                android:id="@+id/tv_plan_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结单"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/x_px_28"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_plan_remake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y_px_20"
                android:text="客服结单\n客服主管1:18877777777"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/x_px_22"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
